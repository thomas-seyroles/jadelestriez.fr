VITE_SHOW_DESIGN_SYSTEM=false

# Sanity Configuration
VITE_SANITY_PROJECT_ID=
VITE_SANITY_DATASET=production
# Token API Sanity avec droits d'écriture (Editor ou plus)
# Requis pour sauvegarder les messages de contact dans le CMS
SANITY_API_TOKEN=sk...

# Variables d'environnement pour Cloudflare Pages Functions
# Ces variables doivent être configurées dans le dashboard Cloudflare Pages
# Settings > Environment variables

# API Key Resend (obligatoire)
# Obtenez votre clé API sur: https://resend.com/api-keys
RESEND_API_KEY=re_

# Email de destination pour recevoir les messages de contact (obligatoire)
CONTACT_EMAIL_TO=

# Email d'envoi (obligatoire)
# Doit être un domaine vérifié sur Resend
# Format: Nom <noreply@votre-domaine.com>
CONTACT_EMAIL_FROM=Jade Lestriez <noreply@jade-lestriez.com>
